<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etFileName"
        android:hint="File Name"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

    <Button
        android:id="@+id/btCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create File"
        app:layout_constraintStart_toStartOf="@+id/etFileName"
        app:layout_constraintTop_toBottomOf="@+id/etFileName"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Delete File"
        app:layout_constraintStart_toStartOf="@+id/btCreate"
        app:layout_constraintTop_toBottomOf="@+id/btCreate"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btShowFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Show Files"
        app:layout_constraintStart_toStartOf="@+id/btDelete"
        app:layout_constraintTop_toBottomOf="@+id/btDelete"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>